@model IEnumerable<ModelLayer.ViewModels.PlayerViewModel>

@{
	ViewData["Title"] = "PlayersList";
}

<h1>PlayersList</h1>

<div style="color:red;">@Html.ValidationSummary()</div>
<div class="row">
	<!--Show details are saved successfully message-->
	<div class="col-lg-12">@ViewBag.Message</div>
</div>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.playerId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Lname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.numWins)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.numLosses)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.JpgStringImage)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.playerId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Lname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.numWins)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.numLosses)
				</td>
				<td>
					<img class="img-responsive" src="@item.JpgStringImage" alt="No Image Found" style="height:100px" />
				</td>
				<td>
					<a asp-controller="Player" asp-action="EditPlayer" asp-route-playerGuid="@item.playerId" method="get">Edit This Player</a> |
					<a asp-controller="Player" asp-action="PlayerDetails" asp-route-playerGuid="@item.playerId" method="get">Player Details</a> |
					<a asp-controller="Player" asp-action="DeletePlayer" asp-route-playerGuid="@item.playerId" method="GET">Delete this player</a> |
				</td>
			</tr>
		}
	</tbody>
</table>
